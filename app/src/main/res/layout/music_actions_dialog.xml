<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_music_vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/white_round_box_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="0dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingStart="@dimen/activity_vertical_margin"
            android:paddingTop="7dp"
            android:paddingEnd="@dimen/activity_vertical_margin"
            android:paddingBottom="7dp">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/riv_music_actions_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/music_item"
                app:riv_corner_radius="10dp"
                app:riv_mutate_background="true" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:layout_marginEnd="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_music_actions_music"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:gravity="start"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/normal_font_size"
                    tools:text="خاک" />

                <TextView
                    android:id="@+id/tv_music_actions_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/font"
                    android:gravity="start"
                    android:textColor="@color/colorDark"
                    android:textSize="@dimen/small_font_size"
                    tools:text="بهزاد لیتو" />

            </LinearLayout>


            <ImageView
                android:id="@+id/img_music_actions_like"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_like_off" />

            <ImageView
                android:id="@+id/img_music_actions_bookmark"
                android:layout_width="@dimen/_18sdp"
                android:layout_height="@dimen/_18sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:src="@drawable/ic_bookmark_off" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="#E4E4E4" />

    <LinearLayout
        android:id="@+id/ll_music_actions_go_to_artist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/activity_vertical_margin">


        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_person_black_24dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:fontFamily="@font/font"

            android:text="@string/go_to_artist"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/normal_font_size" />

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_keyboard_arrow_left_black" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_music_actions_add_to_playlist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/activity_vertical_margin">


        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_add_to_playlist" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:fontFamily="@font/font"

            android:text="@string/add_to_playlist"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/normal_font_size" />

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_keyboard_arrow_left_black" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_music_actions_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/activity_vertical_margin">


        <ImageView
            android:id="@+id/img_music_actions_download"
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_download" />


        <com.github.abdularis.buttonprogress.DownloadButtonProgress
            android:id="@+id/downloadprogress_music_actions"
            android:layout_width="28.0dip"
            android:layout_height="28.0dip"
            android:layout_gravity="center"
            android:visibility="gone"
            app:currentProgress="20"
            app:determinateBackgroundDrawable="@drawable/download_determinate_drawable"
            app:finishBackgroundDrawable="@drawable/download_idle_drawable"
            app:idleBackgroundDrawable="@drawable/download_idle_drawable"
            app:idleIconDrawable="@drawable/ic_download"
            app:indeterminateBackgroundDrawable="@drawable/download_idle_drawable"
            app:maxProgress="100"
            app:progressDeterminateColor="@color/colorPrimary"
            app:progressIndeterminateColor="@color/colorPrimary"
            app:progressWidth="2.0dip"
            app:state="DETERMINATE" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:fontFamily="@font/font"
            android:text="@string/download"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/normal_font_size" />

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_keyboard_arrow_left_black" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_music_actions_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?selectableItemBackgroundBorderless"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/activity_vertical_margin">


        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_share" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_vertical_margin"
            android:layout_marginEnd="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:fontFamily="@font/font"

            android:text="@string/share"
            android:textColor="@color/colorDark"
            android:textSize="@dimen/normal_font_size" />

        <ImageView
            android:layout_width="@dimen/_15sdp"
            android:layout_height="@dimen/_15sdp"
            android:src="@drawable/ic_keyboard_arrow_left_black" />

    </LinearLayout>


</LinearLayout>