<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context=".activities.EditProfileActivity">

    <include layout="@layout/layout_page_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/civ_profile_user"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:src="@drawable/ic_user"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_profile_pick_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:background="@drawable/primary_round_box_background"
                    android:fontFamily="@font/font"
                    android:text="@string/chose_photo"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/small_font_size" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin2x"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/box_height"
                        android:background="#ededed"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_profile_edit_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#f9f9f9"
                            android:fontFamily="@font/font"
                            android:hint="@string/name"
                            android:inputType="text"
                            android:lines="1"
                            android:maxLines="1"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/colorDark"
                            android:textSize="@dimen/normal_font_size" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin2x"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/box_height"
                        android:background="#ededed"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_profile_edit_email"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#f9f9f9"
                            android:enabled="false"
                            android:fontFamily="@font/font"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress"
                            android:lines="1"
                            android:maxLines="1"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textColor="@color/colorDark"
                            android:textSize="@dimen/normal_font_size" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin2x"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/box_height"
                        android:background="#ededed"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_profile_edit_password"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#f9f9f9"
                            android:fontFamily="@font/font"
                            android:hint="@string/password"
                            android:inputType="textPassword"
                            android:lines="1"
                            android:maxLines="1"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorDark"
                            android:textSize="@dimen/normal_font_size" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin2x"
                    android:layout_marginEnd="@dimen/activity_vertical_margin"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="0dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/box_height"
                        android:background="#ededed"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/et_profile_edit_confirm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#f9f9f9"
                            android:fontFamily="@font/font"
                            android:hint="@string/confirm"
                            android:inputType="textPassword"
                            android:lines="1"
                            android:maxLines="1"
                            android:paddingStart="8dp"
                            android:paddingEnd="8dp"
                            android:textAlignment="viewStart"
                            android:textColor="@color/colorDark"
                            android:textSize="@dimen/normal_font_size" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:background="@drawable/green_round_box_background"
        android:fontFamily="@font/font"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="@string/save_edits"
        android:textColor="@android:color/white"
        android:textSize="@dimen/normal_font_size">

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/font"
            android:gravity="center"
            android:text="@string/save_edits"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_font_size" />

        <ProgressBar
            android:id="@+id/progress_bar_profile_edit"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:padding="8dp"
            android:visibility="invisible" />
    </LinearLayout>
</LinearLayout>