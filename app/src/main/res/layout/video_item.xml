<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_video_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackgroundBorderless"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/activity_vertical_margin"
        android:layout_marginEnd="@dimen/activity_vertical_margin">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/riv_video_item_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_160sdp"
            tools:src="@drawable/video_sample"
            android:scaleType="centerCrop"
            app:riv_corner_radius="10dp" />


        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_gravity="center"
            android:src="@drawable/ic_circle_play_black" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|left"
            android:layout_marginLeft="8dp"
            android:alpha="0.8"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/font"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingTop="3dp"
            android:paddingEnd="8dp"
            android:background="@drawable/dark_round_box_background"
            android:paddingBottom="3dp"
            android:text="MP4"
            android:textColor="@android:color/white"
            android:textSize="@dimen/small_font_size" />
</FrameLayout>

<LinearLayout
android:layoutDirection="rtl"
android:layout_height="wrap_content"
android:layout_width="match_parent"
android:orientation="horizontal"
android:paddingEnd="@dimen/activity_vertical_margin2x"
android:paddingStart="@dimen/activity_vertical_margin"
android:paddingTop="8dp">

<TextView
    android:ellipsize="end"
    android:fontFamily="@font/font"
    android:gravity="start"
    android:id="@+id/tv_video_item_title"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:maxLines="1"
    android:textColor="@color/colorPrimaryDark"
    android:textSize="@dimen/normal_font_size"
    tools:text="دختر ترک" />

</LinearLayout></LinearLayout>